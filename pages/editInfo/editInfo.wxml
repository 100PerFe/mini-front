<van-notify id="van-notify" />

<view class="header">
  <van-image
  round
  fit="cover"
  width="8rem"
  height="8rem"
  src="https://img.yzcdn.cn/vant/cat.jpeg"
  />
</view>

<van-cell-group title="基本信息">
  <van-field
    value="{{ userName }}"
    clearable
    type="text"
    label="用户名"
    placeholder="请输入新用户名"
    bind:click-icon="onClickIcon"
    input-align="right"
    bind:change="getUserName"
  />

  <van-field
    value="{{ userSelfDescription }}"
    type="textarea"
    label="个性签名"
    placeholder="请输入新个性签名"
    clearable
    autosize
    maxlength="50"
    show-confirm-bar
    show-word-limit
    border="{{ false }}"
    input-align="right"
    bind:change="getUserSelfDesc"
  />
</van-cell-group>
<van-cell-group title="联系方式">
  <van-field
    value="{{ userEmail }}"
    clearable
    label="邮箱"
    type="text"
    placeholder="请输入新邮箱"
    input-align="right"
    bind:blur="getUserEmail"
    error-message="{{emailErrorMsg}}"
    error-message-align="right"
  />
  
</van-cell-group>
<view class="footer">
  <van-button color="linear-gradient(to right, #EDE574, #E1F5C4)" custom-style="color: #3f4470;width:85vw" bind:click="submitUpdateInfo">
    保存
  </van-button>
</view>




