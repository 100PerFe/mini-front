.member_list{
    padding:48rpx 48rpx 0 48rpx 
}
.list_header{
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: row;

}
#mem_img{
    width: 45%;
    height: 300rpx;
    border:2rpx solid black;
    display: inline-block;
    margin-right: 60rpx;
    
}
image{
    width: 100%;
    height: 300rpx;
}
#men_title{
    width: 30%;
    height: 300rpx;
    border:2rpx solid black;
    display: inline-block;
    text-align: center;
    
}
.list_body{
    width: 100%;
    margin-top: 70rpx;
}
.btn2{
    display: flex;
    flex-direction: row;
    background-color: cornsilk;
    width: 100%;
    height: 50rpx;
    font-size: 30rpx;
    font-family: "微软雅黑";
    color: #000000;
    border-bottom: 3rpx solid #000000;
    align-items: center;
    justify-content: center;
}
.btn2::after{
    border: 3rpx solid cornsilk;
}
.btnhover{
    color: #FADB14;
}
.btn2 view{
    display: inline-block;
    width: 30%;
    margin-right: 350rpx;
    text-align: left;
}
.btn2 image{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
}


